@using BlazorHiprint.DesignPaper.Components
@using BlazorHiprint.DesignPaper.Data
@inherits MElementBase<MImageTmplt>

<div class="form-group">
    <label>Image URL</label>
    <input type="text" class="form-control" @bind="Data.Src" />
</div>
<div class="form-group">
    <label>Width</label>
    <input type="number" class="form-control" @bind="Data.Width" />
</div>
<div class="form-group">
    <label>Height</label>
    <input type="number" class="form-control" @bind="Data.Height" />
</div>

@code {
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        if (Data != null)
        {
            Data.FieldHasChanged = (name, value) => StateHasChanged();
        }
    }
}
