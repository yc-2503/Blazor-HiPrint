@using BlazorHiprint.DesignPaper.Components
@using BlazorHiprint.DesignPaper.Data
@inherits MElementBase<MLineTmplt>

<div class="line-config">
    <div class="config-row">
        <label>Length:</label>
        <input type="number" min="1" step="1" @bind="Data.Length" 
               class="form-control compact" />
    </div>
    <div class="config-row">
        <label>Angle (deg):</label>
        <input type="number" min="0" max="360" step="1" @bind="Data.Angle" 
               class="form-control compact" />
    </div>
    <div class="config-row">
        <label>Stroke Width:</label>
        <input type="number" min="0.1" step="0.1" @bind="Data.StrokeWidth" 
               class="form-control compact" />
    </div>
    <div class="config-row">
        <label>Stroke Color:</label>
        <input type="color" @bind="Data.StrokeColor" 
               class="form-control compact" />
    </div>
</div>

<style>
    .line-config {
        display: grid;
        gap: 0.5rem;
        padding: 0.5rem;
    }
    .config-row {
        display: grid;
        grid-template-columns: 100px 1fr;
        align-items: center;
        gap: 0.5rem;
    }
    .form-control.compact {
        padding: 0.25rem 0.5rem;
        font-size: 0.9rem;
    }
</style>

